<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.MyApplication.AppWidget.Container"
    android:id="@+id/item_widget"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp"
    android:theme="@style/AppTheme.AppWidgetContainer">


    <TextView
        android:id="@+id/item_text"
        style="@style/Widget.MyApplication.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/item_text"
        android:layout_alignTop="@+id/item_text"
        android:layout_alignEnd="@+id/item_text"
        android:layout_alignBottom="@+id/item_text"
        android:layout_marginStart="63dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/widget_tempature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_text"
        android:layout_alignTop="@+id/item_text"
        android:layout_alignEnd="@+id/item_text"
        android:layout_alignBottom="@+id/item_text"
        android:layout_marginStart="4dp"
        android:layout_marginTop="86dp"
        android:textSize="18sp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="13dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/widget_updatetime"
        android:layout_width="58dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/item_text"
        android:layout_alignTop="@+id/item_text"
        android:layout_alignEnd="@+id/item_text"
        android:layout_alignBottom="@+id/item_text"
        android:layout_marginStart="2dp"
        android:layout_marginTop="41dp"
        android:textSize="18sp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="34dp"
        android:text="TextView" />

</RelativeLayout>

